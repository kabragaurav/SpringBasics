<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context/
  http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="usesetter" class="com.gaurav.injection.Student">
        <property name="id" value="101"></property>
        <property name="name" value="gaurav"></property>
    </bean>

    <bean id="usector" class="com.gaurav.injection.Student">
        <constructor-arg name="id" value="102"></constructor-arg>
        <constructor-arg name="name" value="kabra"></constructor-arg>
    </bean>

</beans>